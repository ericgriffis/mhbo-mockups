<div class="bg-white body-column-wrapper">
    <div>
        <div class="spacer-md"></div>
        <div class="spacer-sm"></div>
    </div>

    <div class="body-column">
        <a href="#" class="button-lg bg-white text-gray-md border-gray-md text-left">
            <div class="button-icon">
                <%= image_tag "icons/icon-google.png", class: "" %>

            </div>
            <div class="button-text">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="">Sign Up with</span> <span class="font-semibold">Google</span>
            </div>
        </a>
    </div>

    <div class="spacer-sm"></div>

    <div class="body-column">
        <a href="#" class="button-lg bg-blue-fb text-white text-left">
            <div class="button-icon">
                <%= image_tag "icons/icon-fb.png", class: "" %>

            </div>
            <div class="button-text">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="">Sign Up with</span> <span class="font-semibold">Facebook</span>
            </div>
        </a>
    </div>

    <div class="spacer-sm"></div>

    <div class="body-column">
        <a href="#" class="button-lg bg-purple text-white text-left">
            <div class="button-icon">
                <%= image_tag "icons/icon-yahoo.png", class: "" %>

            </div>
            <div class="button-text">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <span class="">Sign Up with</span> <span class="font-semibold">Yahoo!</span>
            </div>
        </a>
    </div>

    <div class="spacer-md"></div>

    <div class="body-column">
        <div class="text-center text-md text-gray-md">
            or
        </div>
    </div>

    <div class="spacer-md"></div>

    <div class="body-column">
        <form>
            <% @signup2_inputs.each do |input| %>
                <div>
                    <input 
                        type="text" 
                        name="<%= input[:name] %>"
                        class="button-lg text-sm text-blue-dark border-gray-md"
                        placeholder="<%= input[:placeholder] %>" 
                        >
                    <div class="input-icon">
                        <% if input[:icon] %>
                            <%= image_tag input[:icon] %>
                        <% else %>
                            <span class="text-lg text-gray-md-light"><%= input[:icon_text]%></span>
                        <% end %>
                    </div>
                    <div class="spacer-md"></div>
                </div>
            <% end %>

            <div>
                <input type="submit" value="Sign Up" class="button-lg bg-red text-white text-center">
            </div>
        
        </form>
    </div>

    <div class="spacer-md"></div>

</div>

<%= render template: "mobile/partials/footer/_footer-log-in" %>
